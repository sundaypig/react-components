{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "target": "es5",
        "lib": ["es2015", "dom"],
        "rootDirs": ["src/components", "stories"],
        "outDir": "lib",
        "sourceMap": true,
        "declaration": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react"
    },
    "exclude": ["node_modules", "lib", "lib-esm", "dist"],
    "include": ["src/components"],
    "compileOnSave": false
}
